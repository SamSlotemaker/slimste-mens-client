{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~source/*": ["./source/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
